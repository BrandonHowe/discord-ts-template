{
    "name": "discord-ts-template",
    "version": "0.0.1",
    "description": "A template for Discord.JS, using TypeScript",
    "main": "src/index.ts",
    "scripts": {
        "lint": "eslint **/*.ts",
        "format": "prettier --write \"**/*.+(js|json|ts)\"",
        "check": "npm run format && npm run lint",
        "start": "node ./dist/src/index.js",
        "start-dev": "node -r ./register.js src/index.ts",
        "dev": "nodemon",
        "tsc": "tsc",
        "build": "npm run tsc",
        "test": "cross-env NODE_ENV=test mocha -r ./register.js 'src/**/*.spec.ts' --exit"
    },
    "author": "ImperialWater",
    "license": "ISC",
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^2.12.0",
        "@typescript-eslint/parser": "^2.12.0",
        "eslint": "^6.7.2",
        "eslint-config-prettier": "^6.7.0",
        "eslint-config-standard": "^14.1.0",
        "eslint-plugin-import": "^2.19.1",
        "eslint-plugin-node": "^10.0.0",
        "eslint-plugin-prettier": "^3.1.2",
        "eslint-plugin-promise": "^4.2.1",
        "eslint-plugin-standard": "^4.0.1",
        "nodemon": "^2.0.4",
        "prettier": "^1.19.1",
        "ts-node": "^8.5.4",
        "typescript": "^3.7.3"
    },
    "dependencies": {
        "dotenv": "^8.2.0"
    }
}
